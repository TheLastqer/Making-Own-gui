-- Simple custom GUI script example for Roblox

-- Create ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "Procces LOL FxZ"
screenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

-- Create Frame
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 225, 0, 120)
frame.Position = UDim2.new(0.5, -125, 0.5, -60)
frame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
frame.BorderSizePixel = 0
frame.Active = true           -- Enable input on the frame
frame.Parent = screenGui

-- Custom Drag Script
local dragging, dragInput, dragStart, startPos

frame.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = true
        dragStart = input.Position
        startPos = frame.Position

        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
            end
        end)
    end
end)

frame.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement then
        dragInput = input
    end
end)

game:GetService("UserInputService").InputChanged:Connect(function(input)
    if input == dragInput and dragging then
        local delta = input.Position - dragStart
        frame.Position = startPos + UDim2.new(0, delta.X, 0, delta.Y)
    end
end)

-- Create Title Label
local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, 0, 0, 30)
title.BackgroundTransparency = 1
title.Text = "Procees LOL FxZ"
title.Font = Enum.Font.SourceSansBold
title.TextSize = 22
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.Parent = frame

-- Create Close Button
local closeButton = Instance.new("TextButton")
closeButton.Size = UDim2.new(0.35, 0, 0, 40)
closeButton.Position = UDim2.new(0.1, 0, 0.5, -20)
closeButton.BackgroundColor3 = Color3.fromRGB(220, 60, 60)
closeButton.Text = "Close"
closeButton.Font = Enum.Font.SourceSans
closeButton.TextSize = 20
closeButton.TextColor3 = Color3.fromRGB(255, 255, 255)
closeButton.Parent = frame

-- Create Button
local createButton = Instance.new("TextButton")
createButton.Size = UDim2.new(0.35, 0, 0, 40)
createButton.Position = UDim2.new(0.55, 0, 0.5, -20)
createButton.BackgroundColor3 = Color3.fromRGB(70, 180, 90)
createButton.Text = "fxz"
createButton.Font = Enum.Font.SourceSans
createButton.TextSize = 20
createButton.TextColor3 = Color3.fromRGB(255, 255, 255)
createButton.Parent = frame

-- Button functionality: Close the GUI
closeButton.MouseButton1Click:Connect(function()
    screenGui:Destroy()
end)

-- Button functionality: Create action
createButton.MouseButton1Click:Connect(function()
    createButton.Text = "Created!"
    wait(1)
    createButton.Text = "Create"
end)
